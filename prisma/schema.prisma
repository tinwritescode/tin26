generator client {
  provider   = "prisma-client-js"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                String   @id @default(cuid())
  workosId          String   @unique
  email             String   @unique
  firstName         String?
  lastName          String?
  appliedTemplateId String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  appliedTemplate  HabitTemplate?    @relation("AppliedTemplate", fields: [appliedTemplateId], references: [id])
  habitTemplates   HabitTemplate[]
  habitCompletions HabitCompletion[]

  @@map("users")
}

model HabitTemplate {
  id        String   @id @default(cuid())
  userId    String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user           User    @relation(fields: [userId], references: [id])
  habits         Habit[]
  appliedByUsers User[]  @relation("AppliedTemplate")

  @@map("habit_templates")
}

model Habit {
  id          String   @id @default(cuid())
  templateId  String
  icon        String
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  template    HabitTemplate     @relation(fields: [templateId], references: [id])
  completions HabitCompletion[]

  @@map("habits")
}

model HabitCompletion {
  id          String   @id @default(cuid())
  userId      String
  habitId     String
  completedAt DateTime @default(now())
  date        String

  user  User  @relation(fields: [userId], references: [id])
  habit Habit @relation(fields: [habitId], references: [id])

  @@unique([userId, habitId, date])
  @@map("habit_completions")
}
